#include <time.h>
#include <iostream>
#include <fstream>
#include <string>
#include <algorithm>
using namespace std;
int main(){
   int grade;
   int n;
   cout<<"年级：";
   cin>> grade;
   cout<<"题目数量：";
   cin>> n;
   srand(time(NULL));
   int source=0;
   int source1;
   source1=100/n;
if(grade==1||grade==2){
    
   for(n;n>0;n--){
    
    int type=rand()%2;
    if(type==0){
     int a=rand()%100;
     int b=rand()%100;
     int r;
     r=a+b;
     cout<<a;
     cout<<"+";
     cout<<b;
     cout<<"=";
     int stu;
     cin>>stu;
     if(stu==r){
      source=source+source1;
     }
     
     
     
    }    
    
    if(type==1){
     int a=rand()%100;
     int b=rand()%100;
     int r;
     r=a-b;
    cout<<a;
     cout<<"-";
     cout<<b;
     cout<<"=";
     int stu;
     cin>>stu;
     if(stu==r){
      source=source+source1;
     }
     
     
     
    }    
    
    
    
    
   } 
     cout<<"得分： ";
     cout<<source;
    
    
    
    
   }
